<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 타입 별칭 설정 ========================= -->
	<typeAliases>
		<typeAlias type="board.model.BoardVO" alias="Board"/>
		<typeAlias type="reply.model.ReplyVO" alias="Reply"/>
	</typeAliases>
	
	<!-- 데이터베이스 트랜잭션 관리자 설정=============== -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE" />
				<property name="username" value="c##yl" />
				<property name="password" value="oracle" />
			</dataSource>
		</environment>
	</environments>
	<!-- 매퍼정의 =============================== -->
	<mappers>
		<!-- <mapper resource="org/mybatis/example/BlogMapper.xml" /> -->
		<mapper resource="common/mapper/TestMapper.xml"/>
		<mapper resource="common/mapper/BoardMapper.xml"/>
	</mappers>
</configuration>